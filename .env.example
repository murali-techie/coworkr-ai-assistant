# ===========================================
# COWORKR - Environment Variables Template
# ===========================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to version control

# ----- Google Cloud -----
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_REGION=us-central1

# ----- Google AI (Gemini) -----
# Get your API key from: https://aistudio.google.com/apikey
GOOGLE_AI_API_KEY=your-google-ai-api-key
GEMINI_MODEL=gemini-2.5-flash

# ----- Firebase/Firestore (Client-side) -----
# Get these from Firebase Console > Project Settings > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef123456

# ----- Firebase Admin (Server-side) -----
# Get these from Firebase Console > Project Settings > Service accounts
FIREBASE_ADMIN_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# ----- ElevenLabs -----
# Get your API key from: https://elevenlabs.io/app/settings/api-keys
# Create a Conversational AI Agent at: https://elevenlabs.io/agents
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_AGENT_ID=your-agent-id
ELEVENLABS_VOICE_ID_MALE=pNInz6obpgDQGcFmaJgB
ELEVENLABS_VOICE_ID_FEMALE=21m00Tcm4TlvDq8ikWAM

# ----- Google Calendar OAuth (Optional) -----
# Create OAuth credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CALENDAR_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CALENDAR_CLIENT_SECRET=your-client-secret
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:3000/api/calendar/callback

# ----- App Settings -----
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Coworkr
SESSION_SECRET=generate-a-random-secret-here-min-32-chars

# ----- Development -----
NODE_ENV=development
